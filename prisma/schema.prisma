generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id             Int               @id @default(autoincrement())
  businessName   String
  businessType   String
  address        String
  city           String
  state          String
  zipCode        String
  country        String
  description    String?           @default("")
  password       String // Aquí deberías almacenar el hash generado por bcrypt
  ownerId        Int               @unique
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  openingHoursId Int
  imagesId       Int?
  locationId     Int
  services       BusinessService[]
  location       Location          @relation(fields: [locationId], references: [id])
  owner          Owner             @relation(fields: [ownerId], references: [id])
  openingHours   OpeningHours      @relation(fields: [openingHoursId], references: [id])
  images         Images?           @relation()
}

model Owner {
  id       Int        @id @default(autoincrement())
  name     String
  email    String
  business Business[]
}

model Service {
  id          Int               @id @default(autoincrement())
  type        String
  name        String
  description String?
  price       Float
  duration    Int // Duración en minutos
  businesses  BusinessService[]
}

model BusinessService {
  businessId Int
  serviceId  Int
  business   Business @relation(fields: [businessId], references: [id])
  service    Service  @relation(fields: [serviceId], references: [id])

  @@id([businessId, serviceId])
}

model OpeningHours {
  id        Int        @id @default(autoincrement())
  monday    String
  tuesday   String
  wednesday String
  thursday  String
  friday    String
  saturday  String
  sunday    String
  Business  Business[]
}

model Images {
  id               Int      @id @default(autoincrement())
  hero             String?
  additionalImages String[]
  businessId       Int      @unique @map("business_id")
  Business         Business @relation(fields: [businessId], references: [id])
}

model Location {
  id        Int        @id @default(autoincrement())
  address   String
  city      String
  state     String
  zipCode   String
  country   String
  latitude  Float
  longitude Float
  Business  Business[]
}
